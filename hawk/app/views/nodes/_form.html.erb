<div class="panel panel-default">
  <div class="panel-body" data-help-target="#rightbar > .container-fluid > #helpentries > .attrhelp">
    <%= form_for [cib, node], horizontal: true, bootstrap: true do |main_form| %>
      <%= errors_for node %>
      <%= main_form.text_field :id, label: _("ID"), readonly: true, data: { help_filter: ".row.id" } %>
      <%= main_form.text_field :name, label: _("Name"), readonly: true, data: { help_filter: ".row.name" } %>
      <fieldset data-attrlist="<%= node.params.to_json %>" data-attrlist-mapping="<%= node.help_text.merge(node.mapping).to_json %>" data-attrlist-prefix="node[params]" data-attrlist-target=".content" data-attrlist-freeform="yes">
        <legend>
          <%= _("Attributes") %>
          <span class="pull-right toggleable">
            <%= icon_tag("chevron-up") %>
          </span>
        </legend>
        <div class="content"></div>
      </fieldset>
      <fieldset data-attrlist="<%= node.utilization.to_json %>" data-attrlist-mapping="<%= node.help_text.merge(node.mapping).to_json %>" data-attrlist-prefix="node[utilization]" data-attrlist-target=".content" data-attrlist-freeform="yes">
        <legend>
          <%= _("Utilization") %>
          <span class="pull-right toggleable">
            <%= icon_tag("chevron-up") %>
          </span>
        </legend>
        <div class="content"></div>
      </fieldset>
      <%= main_form.button_group do %>
        <%= apply_button(main_form, node) %>
        <%= revert_button(main_form, node) %>
        <%= link_to _("Back"), edit_cib_config_path(cib_id: cib.id, anchor: "nodes"), class: "btn btn-default back" %>
      <% end %>
    <% end %>
  </div>
</div>
